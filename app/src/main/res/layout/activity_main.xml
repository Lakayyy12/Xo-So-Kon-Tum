<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbgc"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/customborder2"
            android:src="@drawable/banner1"
            android:scaleType="fitXY" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/im1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/customborder3"
            android:backgroundTint="#D50000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />
        </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/jian1"
            android:layout_width="150dp"
            android:layout_height="70dp"
        android:background="@drawable/customborder3"
            android:layout_marginRight="10dp"
            android:text="Hướng dẫn 1"
            app:backgroundTint="#EFD5B3"
            android:shadowColor="#FF0202"
            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/jian2"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/customborder3"
            android:text="Hướng dẫn 2"
            app:backgroundTint="#EFD5B3"
            android:shadowColor="#FF0202"
            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/jian3"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/customborder3"
                android:layout_marginRight="10dp"
                android:text="Hướng dẫn 3"
                app:backgroundTint="#EFD5B3"
                android:shadowColor="#FF0202"
                android:shadowRadius="5"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/jian4"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customborder3"
                android:text="Hướng dẫn 4"
                app:backgroundTint="#EFD5B3"
                android:shadowColor="#FF0202"
                android:shadowRadius="5"
                android:shadowDx="1"
                android:shadowDy="1"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:text="GIỚI THIỆU XỔ SỐ"
            android:backgroundTint="#CDB11B"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:shadowColor="#FF0202"
            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="1"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>